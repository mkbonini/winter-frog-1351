<h1>Plots:</h1>

<div id="plots-list">
    <% @plots.each do |plot| %>
        <h3> Plot Number: <%= plot.number %> </h3>
            <div id="plot<%= plot.number %>-plants">
                <% plot.plants.each do |plant| %>
                    <%= plant.name %>
                    <%= link_to("Remove From Plot", plot_plant_path(plot, plant ), method: :delete) %>
                <% end %>
            </div>
    <% end %>